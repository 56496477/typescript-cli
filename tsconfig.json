{
  "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "moduleResolution": "node",
      "target": "es6",
      "noEmit": true,
      "esModuleInterop": true,
      "baseUrl": "./",
      "paths": {
          "src/*": ["src/*"]
      },
      "lib": ["es5", "esnext", "dom"]
  },
  "exclude": ["node_modules"]
}
